<?xml version='1.0' encoding='utf-8'?>
<widget id="com.h4ckademy.maps" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Maps</name>
    <description>
        Una aplicación simple de PhoneGap que usa geolocalización y mapas de Leaflet
    </description>
    <author email="h4@h4ckademy.com" href="http://h4ckademy.com">
        h4ckademy
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android"> 
</widget>
